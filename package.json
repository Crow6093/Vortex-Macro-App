{
  "name": "vortex-macro-app-v2",
  "version": "1.1.0",
  "description": "VortexMacroApp V2 - Productivity tool with MacroPad support",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "macropad",
    "automation",
    "electron",
    "productivity"
  ],
  "author": "Crow6093",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "node-hid": "^3.2.0"
  },
  "build": {
    "appId": "com.crow6093.vortexmacro",
    "productName": "Vortex Macro V2",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icono.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Vortex Macro V2",
      "license": "LICENSE.txt",
      "installerIcon": "assets/icono.ico",
      "uninstallerIcon": "assets/icono.ico",
      "installerHeaderIcon": "assets/icono.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    }
  }
}